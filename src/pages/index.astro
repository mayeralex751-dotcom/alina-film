      <!-- TikTok (using simple icon for demo) -->
       <a href="#" class="hover:text-gray-300 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/></svg>
      </a>
    </div>
    
    <!-- Navigation (Right) -->
    <nav class="hidden md:flex space-x-8 text-[11px] font-sans font-light tracking-[0.2em] uppercase text-white">
      <a href="#" class="hover:text-gray-200 transition-colors">Home</a>
      <a href="#" class="hover:text-gray-200 transition-colors">About</a>
      <a href="#" class="hover:text-gray-200 transition-colors">Headshots</a>
      <a href="#" class="hover:text-gray-200 transition-colors">Seniors</a>
      <a href="#" class="hover:text-gray-200 transition-colors">Coaching</a>
      <a href="#" class="hover:text-gray-200 transition-colors">Contact</a>
      <a href="#" class="hover:text-gray-200 transition-colors">Blog</a>
    </nav>

    <!-- Mobile Menu Icon (Hamburger) -->
    <button class="md:hidden text-white">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.0" d="M4 6h16M4 12h16M4 18h16"></path></svg>
    </button>
  </header>

  <!-- Hero Section -->
  <!-- Flex Column Layout -->
  <!-- w-full relative to contain the video -->
  <div class="relative w-full flex flex-col items-center pt-32 md:pt-40 overflow-visible gap-4"> 
    
    <!-- Background Video -->
    <!-- absolute inset-0 will cover the "effective" height of the container -->
    <div class="absolute inset-0 z-0 overflow-hidden">
       <video autoplay muted loop playsinline class="w-full h-full object-cover">
          <source src={videoBg} type="video/mp4">
       </video>
       <div class="absolute inset-0 bg-black/40"></div> <!-- Overlay increased to 40% -->
    </div>

    <!-- Hero Titles (Flow Content) -->
    <!-- relative z-40 ensures it sits above photo -->
    <div class="relative z-40 text-center text-white flex flex-col items-center"> 
      
      <!-- First Name -->
      <h1 class="font-serif text-6xl md:text-8xl lg:text-[10rem] leading-none tracking-tighter drop-shadow-2xl text-white my-0 !text-white block" style="color: white !important;">
        Alina
      </h1>
      
      <!-- Slogan (Between Names) -->
      <p class="font-sans text-[10px] md:text-sm uppercase tracking-[0.4em] font-light text-white drop-shadow-md !text-white my-2 md:my-4" style="color: white !important;">
        Oh hey, it's all happening
      </p>

      <!-- Last Name -->
      <h1 class="font-serif text-6xl md:text-8xl lg:text-[10rem] leading-none tracking-tighter drop-shadow-2xl text-white my-0 !text-white block" style="color: white !important;">
        Film
      </h1>

    </div>

    <!-- Photo (Flow Content) -->
    <!-- Negative Margin Bottom pulls the NEXT section up -->
    <!-- -mb-24 (mobile) to -mb-48 (desktop) ensures significant overlap -->
    <div class="relative z-30 w-[90vw] h-auto md:w-[45rem] md:h-auto -mb-24 md:-mb-48 shadow-[0_35px_60px_-15px_rgba(0,0,0,0.8)] hover:scale-105 transition-transform duration-700 ease-out">
        <img 
          src={profilePhoto} 
          alt="Alina Photographer" 
          class="w-full h-full object-cover shadow-2xl rounded-sm" 
        />
    </div>
  </div>

  <!-- Intro Section -->
  <!-- Z-20 ensures it is below the photo (Z-30) -->
  <!-- pt-40 ensures the text inside this section doesn't get covered by the overlapping photo -->
  <section class="relative bg-white pt-40 md:pt-64 pb-20 z-20">
    <div class="container mx-auto px-6 text-center max-w-2xl">
      <p class="font-sans text-[10px] uppercase tracking-[0.3em] text-gray-400 font-bold mb-4">
        Hi, friends! I'm Alina
      </p>
      
      <h2 class="font-serif text-4xl md:text-5xl text-gray-900 mb-8 leading-tight">
        Photographer <span class="text-gray-400 font-light">+</span> Creator<br/>
        <span class="italic font-light text-3xl md:text-4xl text-gray-600">Pattaya & Bangkok</span>
      </h2>

      <p class="font-sans text-gray-600 text-sm md:text-base leading-relaxed tracking-wide mb-10">
        Фотограф на плёнку. Снимаю в Паттайе и Бангкоке.<br/>
        Эстетика, чувства, момент.
      </p>
      
      <div class="w-24 h-px bg-gray-200 mx-auto"></div>
    </div>
  </section>

  <footer class="bg-white py-10 border-t border-gray-100 text-center">
    <p class="text-[10px] uppercase tracking-[0.3em] text-gray-400">
      &copy; {new Date().getFullYear()} Alina Film
    </p>
  </footer>

</Layout>
