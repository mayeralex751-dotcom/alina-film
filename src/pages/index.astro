---
import Layout from '../layouts/Layout.astro';

import { getEntry, getCollection } from 'astro:content';

// Fetch Content
const heroData = await getEntry('sections', 'hero');
const footerData = await getEntry('sections', 'footer');
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()); // Newest first

// We need exactly 4 posts for the grid layout. Fallback to empty objects if not enough posts to prevent crash.
const p1 = sortedPosts[0] || {};
const p2 = sortedPosts[1] || {};
const p3 = sortedPosts[2] || {};
const p4 = sortedPosts[3] || {};

const { firstName, lastName, slogan, profilePhoto, videoBg } = heroData.data;
const { title, quote, subtitle, socialTelegram, socialInstagram, legalNotice, copyrightText } = footerData.data;
