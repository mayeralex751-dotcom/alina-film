import Layout from '../layouts/Layout.astro';

// Assets
const profilePhoto = "/profile.jpg"; 
const videoBg = "/videos/beach-walk.mp4";
---

<Layout title="Alina Film | Плёночная фотография">
  
  <!-- Header (Fixed, Transparent, Minimal) -->
  <header class="fixed w-full z-50 top-0 left-0 py-8 px-8 md:px-16 flex justify-between items-center text-white transition-all duration-300">
    
    <!-- Social Icons (Left) -->
    <div class="flex items-center gap-6">
